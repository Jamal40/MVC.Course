@model EditAuthorVM;

@{
    var countries = ViewData[Strings.Countries] as IEnumerable<SelectListItem>;
    var awards = ViewData[Strings.Awards] as IEnumerable<SelectListItem>;
}
<form asp-action="Edit" method="post">
    <div class="form-group mb-2">
        <label asp-for="Mail"></label>
        <input class="form-control" asp-for="Mail" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
    </div>

    <div class="form-group mb-2">
        <input class="form-check-input" asp-for="IsActive" />
        <label asp-for="IsActive"></label>
    </div>

    <div class="form-group mb-2">
        <label asp-for="CountryId"></label>
        <select class="form-select" asp-for="CountryId" asp-items="countries"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Language"></label>
        <select class="form-select" asp-for="Language" asp-items="Html.GetEnumSelectList<Languages>()"></select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Awards"></label>
        <select class="form-select" asp-for="Awards" asp-items="awards"></select>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>