@model CreateStudentVM;

<form action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-5">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-5">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-5">
        <label asp-for="ConfirmPasswod"></label>
        <input class="form-control" asp-for="ConfirmPasswod" />
        <span asp-validation-for="ConfirmPasswod" class="text-danger"></span>
    </div>

    <div class="form-group mb-5">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-5">
        <label asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group mb-5">
        <label asp-for="Mark"></label>
        <input class="form-control" asp-for="Mark" />
        <span asp-validation-for="Mark" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
